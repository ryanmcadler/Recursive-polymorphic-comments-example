<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @story.title %>
</p>

<p>
  <b>Content:</b>
  <%= @story.content %>
</p>

<p>
	<b>Comments:</b>
	<ul>
		<%= render :partial => 'comments/comment', :collection => @story.comments %>
	</ul>
</p>

<p>
	<b>New Comment:</b>
	<%= form_for [@story, Comment.new] do |f| %>
	  <p>
	    <%= f.label :content %><br />
	    <%= f.text_area :content %>
	  </p>
	  <p><%= f.submit "Submit" %></p>
	<% end %>
</p>


<%= link_to 'Edit', edit_story_path(@story) %> |
<%= link_to 'Back', stories_path %>
